
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function getUserData(userId) {
        return get(/databases/$(database)/documents/users/$(userId)).data;
    }
    
    function isRole(role) {
        return isSignedIn() && getUserData(request.auth.uid).role == role;
    }

    function isAdmin() {
      return isRole('admin');
    }

    function isTutor() {
      return isRole('tutor');
    }

    function isStudent() {
      return isRole('student');
    }
    
    // --- Collection Rules ---

    // --- Users Collection ---
    match /users/{userId} {
      allow get, list: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if false;
    }

    // --- Classes Collection ---
    match /classes/{classId} {
      allow get: if isSignedIn();
      // Listing classes is allowed if filtered by a teacherId
      allow list: if isSignedIn() && request.query.keys().hasAny(['teacherId']);
      allow create: if isTutor() && request.resource.data.teacherId == request.auth.uid;
      allow update, delete: if isTutor() && resource.data.teacherId == request.auth.uid;
    }

    // --- Enrollments Collection ---
    match /enrollments/{enrollmentId} {
      allow create: if isStudent() && request.resource.data.studentId == request.auth.uid;
      allow get: if isSignedIn() && (request.auth.uid == resource.data.studentId || request.auth.uid == resource.data.teacherId || isAdmin());
      allow update: if isTutor() && resource.data.teacherId == request.auth.uid;
      allow list: if isAdmin() || (isSignedIn() && (request.query.get('teacherId') == request.auth.uid || request.query.get('studentId') == request.auth.uid));
    }

    // --- Study Materials Collection ---
    match /studyMaterials/{materialId} {
        allow read: if isSignedIn();
        allow write: if isTutor() && request.resource.data.teacherId == request.auth.uid;
    }
    
    // --- Attendance Collection ---
    match /attendance/{attendanceId} {
        allow read: if isSignedIn() && (request.auth.uid == resource.data.teacherId || isStudent());
        allow write: if isTutor() && request.resource.data.teacherId == request.auth.uid;
    }
    
    // --- Tests Collection ---
    match /tests/{testId} {
        allow read: if isSignedIn();
        allow write: if isTutor() && request.resource.data.teacherId == request.auth.uid;
    }
    
    // --- Test Results Collection ---
    match /testResults/{resultId} {
        allow create: if isStudent() && request.auth.uid == request.resource.data.studentId;
        allow get: if isAdmin() || (isSignedIn() && (request.auth.uid == resource.data.studentId || request.auth.uid == resource.data.teacherId));
        allow list: if isAdmin() || (isStudent() && request.query.get('studentId') == request.auth.uid) || (isTutor() && request.query.get('teacherId') == request.auth.uid);
    }
    
    // --- Connections Collection ---
    match /connections/{connectionId} {
      allow create: if isStudent() && request.resource.data.requesterId == request.auth.uid;
      allow get, delete: if isStudent() && request.auth.uid in resource.data.userIds;
      allow update: if isStudent() && request.auth.uid == resource.data.receiverId;
      allow list: if isStudent() && request.query.keys().hasAny(['userIds', 'receiverId']);
    }

    // --- Announcements Collection ---
    match /announcements/{announcementId} {
      allow read: if isSignedIn();
      allow write: if isTutor() && request.resource.data.teacherId == request.auth.uid;
    }
  }
}
