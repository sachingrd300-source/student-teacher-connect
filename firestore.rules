rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Helper to safely check a user's role
    function isRole(role) {
        let userPath = /databases/$(database)/documents/users/$(request.auth.uid);
        // Check for existence before trying to access data
        return isSignedIn() && exists(userPath) && get(userPath).data.role == role;
    }

    function isStudent() {
      return isRole('student');
    }

    function isTeacher() {
      return isRole('teacher');
    }

    function isAdmin() {
      return isRole('admin');
    }

    function isTeacherOwnerOfBatch(batchId) {
      let batchData = get(/databases/$(database)/documents/batches/$(batchId)).data;
      return isTeacher() && batchData.teacherId == request.auth.uid;
    }

    function isEnrolledInBatch(batchId) {
      let batchData = get(/databases/$(database)/documents/batches/$(batchId)).data;
      return isStudent() && request.auth.uid in batchData.approvedStudents;
    }
    
    function isSchoolPrincipal(schoolId) {
      let schoolData = get(/databases/$(database)/documents/schools/$(schoolId)).data;
      return isTeacher() && schoolData.principalId == request.auth.uid;
    }

    function isCommunityAssociate(userId) {
      let userData = get(/databases/$(database)/documents/users/$(userId)).data;
      return userData.role == 'teacher' && (userData.teacherWorkStatus == 'achievers_associate' || userData.teacherWorkStatus == 'both');
    }

    function isUpdatingAllowedFieldsForAssociate() {
        let allowedKeys = ['name', 'bio', 'subject', 'whatsappNumber', 'teacherWorkStatus'].toSet();
        let changedKeys = request.resource.data.diff(resource.data).affectedKeys();
        return changedKeys.difference(allowedKeys).size() == 0;
    }

    match /users/{userId} {
      allow get: if isOwner(userId)
                  || isAdmin()
                  || (isSignedIn() && resource.data.role == 'teacher')
                  || (isTeacher() && resource.data.role == 'student');
      allow list: if isAdmin() || isSignedIn();
      allow create: if request.auth.uid == userId;
      allow update: if isAdmin() ||
                   (isOwner(userId) && !isCommunityAssociate(userId)) ||
                   (isOwner(userId) && isCommunityAssociate(userId) && isUpdatingAllowedFieldsForAssociate());
      allow delete: if isAdmin();
      
      match /inventory/{inventoryId} {
        allow read, create: if isOwner(userId);
        allow write: if isAdmin();
      }
    }

    match /batches/{batchId} {
        allow get: if isAdmin() || isSignedIn();
        allow list: if isAdmin() || isTeacher() || isStudent();
        allow create: if isTeacher() && request.resource.data.teacherId == request.auth.uid;
        allow update: if isAdmin() || (isTeacher() && resource.data.teacherId == request.auth.uid);
        allow delete: if isAdmin() || (isTeacher() && resource.data.teacherId == request.auth.uid);

      match /materials/{materialId} {
        allow get, list: if isAdmin() || isTeacherOwnerOfBatch(batchId) || isEnrolledInBatch(batchId);
        allow write: if isAdmin() || isTeacherOwnerOfBatch(batchId);
      }

      match /activity/{activityId} {
        allow get, list: if isAdmin() || isEnrolledInBatch(batchId) || isTeacherOwnerOfBatch(batchId);
        allow write: if isAdmin() || isTeacherOwnerOfBatch(batchId);
      }
      
      match /tests/{testId} {
        allow get, list: if isAdmin() || isTeacherOwnerOfBatch(batchId) || isEnrolledInBatch(batchId);
        allow write: if isAdmin() || isTeacherOwnerOfBatch(batchId);
      }
    }
    
    match /enrollments/{enrollmentId} {
      allow create: if isStudent() 
                    && request.resource.data.studentId == request.auth.uid
                    && request.resource.data.status == 'pending';
      
      allow update: if (isAdmin() || (isTeacher() && resource.data.teacherId == request.auth.uid))
                    || (isStudent() && resource.data.studentId == request.auth.uid && request.resource.data.status == 'unenrollment_requested');
      
      allow delete: if isAdmin() 
                    || (isStudent() && resource.data.studentId == request.auth.uid && resource.data.status == 'pending')
                    || (isTeacher() && resource.data.teacherId == request.auth.uid);
      
      allow get: if isAdmin() || (isSignedIn() && (request.auth.uid == resource.data.studentId || request.auth.uid == resource.data.teacherId));
      
      allow list: if isAdmin() || isStudent() || isTeacher();
    }

    match /fees/{feeId} {
       allow get: if isAdmin() || (isTeacher() && resource.data.teacherId == request.auth.uid) || (isStudent() && resource.data.studentId == request.auth.uid);
       allow list: if isAdmin() || isTeacher() || isStudent();
       allow create: if isTeacher() && request.resource.data.teacherId == request.auth.uid;
       allow update: if isTeacher() && resource.data.teacherId == request.auth.uid;
       allow delete: if isAdmin();
    }
    
    match /testResults/{resultId} {
      allow get: if isAdmin() || 
                   (isTeacher() && resource.data.teacherId == request.auth.uid) ||
                   (isStudent() && resource.data.studentId == request.auth.uid);

      allow list: if isAdmin() || isTeacher() || isStudent();

      allow create: if isAdmin() || 
                      (isTeacher() && request.resource.data.teacherId == request.auth.uid);

      allow update, delete: if isAdmin() ||
                      (isTeacher() && resource.data.teacherId == request.auth.uid);
    }

    match /freeMaterials/{materialId} {
      allow read: if isStudent() || isAdmin();
      allow list: if isStudent() || isAdmin();
      allow write: if isAdmin();
    }

    match /shopItems/{itemId} {
      allow read: if isSignedIn();
      allow list: if isSignedIn();
      allow write: if isAdmin();
    }

    match /homeBookings/{bookingId} {
      allow create: if isStudent() && request.resource.data.studentId == request.auth.uid;
      allow get: if isAdmin() || (isTeacher() && request.auth.uid == resource.data.assignedTeacherId) || (isStudent() && request.auth.uid == resource.data.studentId);
      allow list: if isAdmin() || isTeacher() || isStudent();
      allow update, delete: if isAdmin();
    }
    
    match /homeTutorApplications/{applicationId} {
      allow create: if isTeacher() && request.resource.data.teacherId == request.auth.uid && request.resource.data.status == 'pending';
      allow read: if (isTeacher() && resource.data.teacherId == request.auth.uid) || isAdmin();
      allow list: if isAdmin();
      allow update: if isAdmin(); // Only admin can approve/reject
      allow delete: if isAdmin();
    }
    
    match /verifiedCoachingApplications/{applicationId} {
      allow create: if isTeacher() && request.resource.data.teacherId == request.auth.uid && request.resource.data.status == 'pending';
      allow read: if (isTeacher() && resource.data.teacherId == request.auth.uid) || isAdmin();
      allow list: if isAdmin();
      allow update: if isAdmin(); // Only admin can approve/reject
      allow delete: if isAdmin();
    }

    match /schools/{schoolId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isTeacher() && request.resource.data.principalId == request.auth.uid;
      allow update: if isSchoolPrincipal(schoolId) || isAdmin();
      allow delete: if isSchoolPrincipal(schoolId) || isAdmin();
    }

    match /announcements/{announcementId} {
      allow get, list: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /adminActivities/{activityId} {
      allow read, list, write: if isAdmin();
    }
  }
}
