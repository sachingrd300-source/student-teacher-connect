
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isUser() {
        return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function userRole() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
        return isUser() && userRole() == 'admin';
    }

    function isStudent() {
        return isUser() && userRole() == 'student';
    }

    function isTutor() {
        return isUser() && userRole() == 'tutor';
    }
    
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      // Allow any registered user to query the user list (to find tutors or students by ID).
      // Client-side queries must be used to filter.
      allow list: if isUser();
      // Allow user creation for anyone signing up OR a teacher creating a student
      allow create: if true;
      allow update: if isOwner(userId) || isAdmin() || isTutor();
      allow delete: if false;
    }

    match /classes/{classId} {
      allow create: if isTutor() && request.resource.data.teacherId == request.auth.uid;
      // Allow students to list classes to find one by class code
      allow get, list: if isUser();
      allow update, delete: if isTutor() && resource.data.teacherId == request.auth.uid;
    }

    match /enrollments/{enrollmentId} {
      // Allow creation by a teacher OR by a student for themselves
      allow create: if (isTutor() && request.resource.data.teacherId == request.auth.uid && request.resource.data.status == 'approved') ||
                      (isStudent() && request.resource.data.studentId == request.auth.uid && request.resource.data.status == 'approved');
      
      allow get: if (isStudent() && resource.data.studentId == request.auth.uid)
                 || (isTutor() && resource.data.teacherId == request.auth.uid);

      allow list: if isTutor() || isStudent();
      
      allow delete: if false;
    }

    match /studyMaterials/{materialId} {
      allow create: if isTutor() && request.resource.data.teacherId == request.auth.uid;
      allow get, list: if isUser();
      allow update, delete: if isTutor() && resource.data.teacherId == request.auth.uid;
    }

    match /tests/{testId} {
      allow create: if isTutor() && request.resource.data.teacherId == request.auth.uid;
      allow get, list: if isUser();
      allow update, delete: if isTutor() && resource.data.teacherId == request.auth.uid;
    }

    match /testResults/{resultId} {
      allow create: if isStudent() && request.resource.data.studentId == request.auth.uid;
      allow get: if (isStudent() && request.auth.uid == resource.data.studentId) || (isTutor() && request.auth.uid == resource.data.teacherId);
      allow list: if isTutor() || isStudent(); // Allow list for client-side queries
      allow update, delete: if false;
    }

    match /attendance/{attendanceId} {
      allow create, update: if isTutor() && request.resource.data.teacherId == request.auth.uid;
      allow get, list: if isUser();
      allow delete: if isTutor() && resource.data.teacherId == request.auth.uid;
    }
  }
}

    