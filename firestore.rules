rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- User Profiles ---
    match /users/{userId} {
      allow get, list: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if false; 
    }

    // --- Connections ---
    match /connections/{connectionId} {
      // Allow create if user is the requester
      allow create: if isSignedIn() && request.resource.data.requesterId == request.auth.uid;
      
      // Allow read/delete if user is part of the connection
      allow get, delete: if isSignedIn() && request.auth.uid in resource.data.userIds;

      // Allow receiver to accept the request
      allow update: if isSignedIn() && request.auth.uid == resource.data.receiverId;
      
      // Allow anyone signed in to list connections, queries MUST be filtered on the client.
      allow list: if isSignedIn();
    }
  }
}
