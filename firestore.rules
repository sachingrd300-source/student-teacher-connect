
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ===============================
       Helper Functions
    =============================== */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isStudent() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'student';
    }
    
    function isAdmin() {
      // User is an admin if their document's role field is 'admin'
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isApprovedSeller() {
        return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.marketplaceStatus == 'approved';
    }

    function isApprovedTeacher() {
      let user = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return isSignedIn() && user.role == 'tutor' && user.status == 'approved';
    }

    function isExistingDoc() {
      return resource != null;
    }

    function isTeacherOwner(docData) {
      return isSignedIn() && docData.teacherId == request.auth.uid;
    }

    function isStudentOwner(docData) {
      return isSignedIn() && docData.studentId == request.auth.uid;
    }
    
    // Check if the requesting user is approved for a specific class
    function isEnrolledInClass(classId) {
      // Check for a specific enrollment doc with a predictable ID format: {studentId}_{classId}
      return exists(/databases/$(database)/documents/enrollments/$(request.auth.uid + '_' + classId))
             && get(/databases/$(database)/documents/enrollments/$(request.auth.uid + '_' + classId)).data.status == 'approved';
    }


    /* ===============================
       USERS
    =============================== */

    match /users/{userId} {
      // A user can get their own document.
      // An approved tutor's profile can be read by any signed-in user.
      // An admin can get any user document.
      allow get: if isOwner(userId) || isAdmin() || (isSignedIn() && get(/databases/$(database)/documents/users/$(userId)).data.role == 'tutor' && get(/databases/$(database)/documents/users/$(userId)).data.status == 'approved');
      // A user can update their own document. An admin can also update any user document (e.g. for verification).
      allow update: if isOwner(userId) || isAdmin();
      // A user can create their own profile document.
      allow create: if isOwner(userId)
                    && request.resource.data.id == userId;
      // Admins can list pending users. Tutors can be listed by any signed-in user.
      allow list: if (isAdmin() && (
                      (request.query.where[0][0] == 'role' && request.query.where[0][2] == 'tutor' && request.query.where[1][0] == 'status' && request.query.where[1][2] == 'pending_verification') ||
                      (request.query.where[0][0] == 'role' && request.query.where[0][2] == 'student' && request.query.where[1][0] == 'marketplaceStatus' && request.query.where[1][2] == 'pending')
                    )) || 
                    (isSignedIn() && 
                      request.query.where[0][0] == 'role' && request.query.where[0][2] == 'tutor' && request.query.where[1][0] == 'status' && request.query.where[1][2] == 'approved');
      allow delete: if false;
    }

    /* ===============================
       CLASSES
    =============================== */

    match /classes/{classId} {
      // An enrolled student or the teacher can get class details
      allow get: if isSignedIn() && (isTeacherOwner(get(/databases/$(database)/documents/classes/$(classId)).data) || isEnrolledInClass(classId));
      
      // A teacher can list their own classes.
      // A student can query for a class by its code.
      // Any signed-in user can list active classes.
      allow list: if (isSignedIn() && request.query.where[0][0] == 'teacherId' && request.query.where[0][2] == request.auth.uid) ||
                     (isSignedIn() && request.query.where[0][0] == 'classCode' && request.query.where[0][2] is string) ||
                     (isSignedIn() && request.query.where[0][0] == 'isActive' && request.query.where[0][2] == true);
                     
      allow create: if isApprovedTeacher()
                    && request.resource.data.teacherId == request.auth.uid;
      allow update, delete: if isExistingDoc()
                            && isTeacherOwner(resource.data);
    }
    
    /* ===============================
       ENROLLMENTS
    =============================== */

    match /enrollments/{enrollmentId} {
        // The student or teacher involved can get the document.
        allow get: if isExistingDoc() && (isStudentOwner(resource.data) || isTeacherOwner(resource.data));
        
        // A user can list their own enrollments (as student or teacher).
        // An enrolled student can list other approved students in the same class.
        allow list: if isSignedIn() && (
            (request.query.size() >= 1 && request.query.where[0][0] == 'studentId' && request.query.where[0][2] == request.auth.uid) || 
            (request.query.size() >= 1 && request.query.where[0][0] == 'teacherId' && request.query.where[0][2] == request.auth.uid) ||
            (request.query.size() == 2 && request.query.where[0][0] == 'classId' && request.query.where[1][0] == 'status' && request.query.where[1][2] == 'approved' && isEnrolledInClass(request.query.where[0][2]))
        );

        // An authenticated user can create their own enrollment request with a predictable ID
        allow create: if isSignedIn() 
                      && isStudentOwner(request.resource.data)
                      && enrollmentId == request.auth.uid + '_' + request.resource.data.classId;

        // Only the teacher can approve/deny the request.
        allow update: if isExistingDoc() 
                      && isTeacherOwner(resource.data);
                      
        allow delete: if false;
    }


    /* ===============================
       STUDY MATERIALS
    =============================== */

    match /studyMaterials/{studyMaterialId} {
      // Anyone can get a free document.
      // A signed-in user can get a paid document's metadata (for the shop).
      // The teacher owner can get their own private documents.
      // An enrolled student can get private documents for their class.
      allow get: if (isExistingDoc() && resource.data.isFree == true)
                  || (isExistingDoc() && resource.data.isFree == false && isSignedIn())
                  || (isExistingDoc() && resource.data.teacherId != null && isTeacherOwner(resource.data))
                  || (isExistingDoc() && resource.data.classId != null && isEnrolledInClass(resource.data.classId));
      
      // Allow listing materials under specific, secure conditions.
      allow list: if isSignedIn() && (
          // Teacher can list their own materials
          (request.query.where[0][0] == 'teacherId' && request.query.where[0][2] == request.auth.uid) ||
          // Student can list materials for a class they are enrolled in
          (request.query.where[0][0] == 'classId' && isEnrolledInClass(request.query.where[0][2])) ||
          // Student can list PUBLIC materials (free or paid) which must not have a classId
          (request.query.where.size() == 2 && request.query.where[0][0] == 'isFree' && request.query.where[1][0] == 'classId' && request.query.where[1][2] == null) ||
          // Student can list PUBLIC DPPs which must not have a classId
          (request.query.where.size() == 3 && request.query.where[0][0] == 'isFree' && request.query.where[0][2] == true && request.query.where[1][0] == 'type' && request.query.where[1][2] == 'DPP' && request.query.where[2][0] == 'classId' && request.query.where[2][2] == null)
      );

      // Only approved teachers can create materials for themselves.
      allow create: if isApprovedTeacher()
                    && request.resource.data.teacherId == request.auth.uid;

      allow update, delete: if isExistingDoc()
                            && isTeacherOwner(resource.data);
    }

    /* ===============================
       MARKETPLACE ITEMS
    =============================== */
    match /marketplaceItems/{itemId} {
      // Anyone signed in can view individual marketplace items
      allow get: if isSignedIn();
      
      // Admins can list pending items. Signed-in users can list available items, or their own items.
      allow list: if (isAdmin() && request.query.where[0][0] == 'status' && request.query.where[0][2] == 'pending') || 
                   (isSignedIn() && (
                      (request.query.where[0][0] == 'status' && request.query.where[0][2] == 'available') || 
                      (request.query.where[0][0] == 'sellerId' && request.query.where[0][2] == request.auth.uid)
                   ));

      // An approved student seller can create a listing for themselves.
      allow create: if isApprovedSeller() && request.resource.data.sellerId == request.auth.uid;
      
      // The seller can update the status between 'available' and 'sold'.
      // An admin can update the status from 'pending' to 'available'.
      allow update: if (isExistingDoc() && resource.data.sellerId == request.auth.uid &&
                        (request.resource.data.status in ['available', 'sold']) && (resource.data.status in ['available', 'sold'])) ||
                     (isAdmin() && request.resource.data.status == 'available' && resource.data.status == 'pending');
      // The seller can delete their own item. An admin can also delete any item.
      allow delete: if isExistingDoc() && (resource.data.sellerId == request.auth.uid || isAdmin());
    }

    /* ===============================
       PERFORMANCES
       (Schema MUST contain: studentId, teacherId)
    =============================== */

    match /performances/{performanceId} {
      allow get: if isExistingDoc()
                 && (isStudentOwner(resource.data)
                     || isTeacherOwner(resource.data));
      // A student can list their own performance records. A teacher can list all for their students.
      // The query MUST include a where clause on studentId or teacherId.
      allow list: if isSignedIn() && (
          (request.query.where[0][0] == 'studentId' && request.query.where[0][2] == request.auth.uid) ||
          (request.query.where[0][0] == 'teacherId' && request.query.where[0][2] == request.auth.uid)
        );
      allow create: if isSignedIn()
                    && isTeacherOwner(request.resource.data);
      allow update, delete: if false;
    }


    /* ===============================
       CLASS SCHEDULES
    =============================== */

    match /classSchedules/{classScheduleId} {
       // A teacher can get their own schedule. A student can see schedules for classes they are enrolled in.
      allow get: if isExistingDoc() && (isTeacherOwner(resource.data) || isEnrolledInClass(resource.data.classId));
      
      // A teacher can list their own schedules. A student can list schedules for a class they are enrolled in.
      allow list: if isSignedIn() && (
          (request.query.where[0][0] == 'teacherId' && request.query.where[0][2] == request.auth.uid) ||
          (request.query.where[0][0] == 'classId' && isEnrolledInClass(request.query.where[0][2]))
      );

      allow create: if isApprovedTeacher()
                    && isTeacherOwner(request.resource.data);
      allow update, delete: if isExistingDoc()
                            && isTeacherOwner(resource.data);
    }

    /* ===============================
       ATTENDANCE
    =============================== */
    match /attendance/{attendanceId} {
      // Teacher can create a record for their class.
      allow create: if isApprovedTeacher() && isTeacherOwner(request.resource.data);

      // Teacher and enrolled students can view attendance for their class.
      allow get: if isSignedIn() && (
        (isTeacherOwner(get(/databases/$(database)/documents/attendance/$(attendanceId)).data)) ||
        (isEnrolledInClass(get(/databases/$(database)/documents/attendance/$(attendanceId)).data.classId))
      );
      
      // Teacher can list their records. Students can list records for their class.
      allow list: if isSignedIn() &&
        ( (request.query.where[0][0] == 'teacherId' && request.query.where[0][2] == request.auth.uid) ||
          (request.query.where[0][0] == 'classId' && isEnrolledInClass(request.query.where[0][2])) );

      // No updates or deletes for now to preserve records.
      allow update, delete: if false;
    }
  }
}
