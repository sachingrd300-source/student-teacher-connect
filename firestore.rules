
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ===============================
       Helper Functions
    =============================== */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingDoc() {
      return resource != null;
    }

    function isTeacherOwner(docData) {
      return isSignedIn() && docData.teacherId == request.auth.uid;
    }

    function isStudentOwner(docData) {
      return isSignedIn() && docData.studentId == request.auth.uid;
    }

    function isTeacherOfDppSubmission(submissionData) {
      let material =
        get(/databases/$(database)/documents/studyMaterials/$(submissionData.studyMaterialId)).data;
      return isTeacherOwner(material);
    }
    
    // Check if the requesting user is approved for a specific class
    function isEnrolledInClass(classId) {
      // This function needs to query the enrollments collection.
      // A student is enrolled if a document exists for them in the specified class with 'approved' status.
      // As direct querying is not possible in rules, we rely on checking specific document paths if possible,
      // or structure list rules to enforce this check. For a 'get' rule, this is tricky.
      // A better pattern for `get` is often to duplicate the enrollment status on the user or have a subcollection.
      // For now, we will rely on list rules and a slightly more open get rule for classes.
      return exists(/databases/$(database)/documents/enrollments?path=auto_id_placeholder) 
             && get(/databases/$(database)/documents/enrollments?path=auto_id_placeholder).data.studentId == request.auth.uid
             && get(/databases/$(database)/documents/enrollments?path=auto_id_placeholder).data.classId == classId
             && get(/databases/$(database)/documents/enrollments?path=auto_id_placeholder).data.status == 'approved';
    }


    /* ===============================
       USERS
    =============================== */

    match /users/{userId} {
      // A user can get their own document.
      // An approved tutor's profile can be read by any signed-in user.
      allow get: if isOwner(userId) || (isSignedIn() && get(/databases/$(database)/documents/users/$(userId)).data.role == 'tutor' && get(/databases/$(database)/documents/users/$(userId)).data.status == 'approved');
      // A user can update their own document.
      allow update: if isOwner(userId);
      // A user can create their own profile document.
      allow create: if isOwner(userId)
                    && request.resource.data.id == userId;
      // Allow any signed in user to list approved tutors
      allow list: if isSignedIn() 
                  && request.query.get('role') == 'tutor' 
                  && request.query.get('status') == 'approved';
      allow delete: if false;
    }

    /* ===============================
       CLASSES
    =============================== */

    match /classes/{classId} {
      // An enrolled student or the teacher can get class details
      // The isEnrolledInClass function is complex for a `get` rule. A more secure, but complex, way would be to check a specific enrollment doc path.
      // For simplicity now, we allow any signed-in user to get class details, but secure the materials within.
      allow get: if isSignedIn();
      // A teacher can list their own classes
      allow list: if isSignedIn() && request.query.get('teacherId') == request.auth.uid;
      allow create: if isSignedIn()
                    && request.resource.data.teacherId == request.auth.uid;
      allow update, delete: if isExistingDoc()
                            && isTeacherOwner(resource.data);
    }
    
    /* ===============================
       ENROLLMENTS
    =============================== */

    match /enrollments/{enrollmentId} {
        allow get: if isExistingDoc() && (isStudentOwner(resource.data) || isTeacherOwner(resource.data));
        // A user can list their own enrollments, either as a student or a teacher
        allow list: if isSignedIn() && (
            (request.query.get('studentId') == request.auth.uid) || 
            (request.query.get('teacherId') == request.auth.uid)
        );
        allow create: if isSignedIn() && isStudentOwner(request.resource.data);
        allow update: if isExistingDoc() && isTeacherOwner(resource.data); // only teacher can approve/deny
        allow delete: if false;
    }


    /* ===============================
       STUDY MATERIALS
    =============================== */

    match /studyMaterials/{studyMaterialId} {
      // Anyone can get a free document.
      // The teacher owner can get their own private documents.
      // An enrolled student can get private documents for their class.
      allow get: if (isExistingDoc() && resource.data.isFree == true)
                  || isTeacherOwner(resource.data)
                  || (isExistingDoc() && isEnrolledInClass(resource.data.classId));
      
      // Allow listing materials under certain conditions
      allow list: if isSignedIn() && (
          request.query.get('teacherId') == request.auth.uid ||
          request.query.get('isFree') == true ||
          (request.query.get('classId') != null && isEnrolledInClass(request.query.get('classId')))
      );

      allow create: if isSignedIn()
                    && isTeacherOwner(request.resource.data);

      allow update, delete: if isExistingDoc()
                            && isTeacherOwner(resource.data);
    }

    /* ===============================
       ATTENDANCES
    =============================== */

    match /attendances/{attendanceId} {
      allow get: if isExistingDoc()
                 && (isTeacherOwner(resource.data)
                     || isStudentOwner(resource.data));
      allow list: if isSignedIn()
                  && request.query.get('teacherId') == request.auth.uid;
      allow create: if isSignedIn()
                    && isTeacherOwner(request.resource.data);
      allow update, delete: if isExistingDoc()
                            && isTeacherOwner(resource.data);
    }

    /* ===============================
       PERFORMANCES
       (Schema MUST contain: studentId, teacherId)
    =============================== */

    match /performances/{performanceId} {
      allow get: if isExistingDoc()
                 && (isStudentOwner(resource.data)
                     || isTeacherOwner(resource.data));
      allow list: if isSignedIn()
                  && request.query.get('teacherId') == request.auth.uid;
      allow create: if isSignedIn()
                    && isTeacherOwner(request.resource.data);
      allow update, delete: if false;
    }


    /* ===============================
       CLASS SCHEDULES
    =============================== */

    match /classSchedules/{classScheduleId} {
       // A teacher can get their own schedule.
      allow get: if isExistingDoc()
                 && isTeacherOwner(resource.data);
      // A teacher can list their own schedules.
      allow list: if isSignedIn()
                  && request.query.get('teacherId') == request.auth.uid;
      allow create: if isSignedIn()
                    && isTeacherOwner(request.resource.data);
      allow update, delete: if isExistingDoc()
                            && isTeacherOwner(resource.data);
    }

  }
}
