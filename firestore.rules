
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ===============================
       Helper Functions
    =============================== */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingDoc() {
      return resource != null;
    }

    function isTeacherOwner(docData) {
      return isSignedIn() && docData.teacherId == request.auth.uid;
    }

    function isStudentOwner(docData) {
      return isSignedIn() && docData.studentId == request.auth.uid;
    }

    /* ===============================
       USERS
    =============================== */

    match /users/{userId} {
      // Any signed-in user can view an approved tutor's profile.
      // A user can get and update their own profile.
      allow get: if isOwner(userId) || (isSignedIn() && isExistingDoc() && resource.data.role == 'tutor' && resource.data.status == 'approved');
      allow update: if isOwner(userId);
      // A user can create their own profile document.
      allow create: if isOwner(userId)
                    && request.resource.data.id == userId;
      // Allow any signed in user to list approved tutors
      allow list: if isSignedIn() && request.query.where.role == 'tutor' && request.query.where.status == 'approved';
      allow delete: if false;
    }

    /* ===============================
       CLASSES
    =============================== */

    match /classes/{classId} {
      // Only the teacher owner can get a specific class document.
      allow get: if isExistingDoc() && isTeacherOwner(resource.data);

      // List rule is more open, but client must filter by teacherId.
      allow list: if isSignedIn();

      // A teacher can create a class for themselves.
      allow create: if isSignedIn()
                    && request.resource.data.teacherId == request.auth.uid;

      // A teacher can update or delete their own class.
      allow update, delete: if isExistingDoc()
                            && isTeacherOwner(resource.data);
    }

    /* ===============================
       STUDY MATERIALS
    =============================== */

    match /studyMaterials/{studyMaterialId} {
      // Anyone can get a free document.
      // The teacher owner can get their own document.
      allow get: if (isExistingDoc() && resource.data.isFree == true)
                  || isTeacherOwner(resource.data);
      
      // List rule is more open for free materials or teacher's own materials.
      // Client must filter correctly.
      allow list: if isSignedIn();

      // A teacher can create material for themselves.
      allow create: if isSignedIn()
                    && isTeacherOwner(request.resource.data);

      // A teacher can update or delete their own material.
      allow update, delete: if isExistingDoc()
                            && isTeacherOwner(resource.data);
    }

    /* ===============================
       ATTENDANCES
    =============================== */

    match /attendances/{attendanceId} {
      // Teacher owner or student owner can get the document.
      allow get: if isExistingDoc()
                 && (isTeacherOwner(resource.data)
                     || isStudentOwner(resource.data));

      // List is open for authenticated users, client must filter by teacherId.
      allow list: if isSignedIn();

      // Teacher can create attendance records.
      allow create: if isSignedIn()
                    && isTeacherOwner(request.resource.data);
      
      // Teacher can update or delete their own records.
      allow update, delete: if isExistingDoc()
                            && isTeacherOwner(resource.data);
    }


    /* ===============================
       PERFORMANCES
       (Schema MUST contain: studentId, teacherId)
    =============================== */

    match /performances/{performanceId} {
      // Teacher or student can get their own performance records.
      allow get: if isExistingDoc()
                 && (isStudentOwner(resource.data)
                     || isTeacherOwner(resource.data));

      // List is open for authenticated users, client must filter by teacherId.
      allow list: if isSignedIn();

      // A teacher can create performance records.
      allow create: if isSignedIn()
                    && isTeacherOwner(request.resource.data);

      allow update, delete: if false;
    }


    /* ===============================
       CLASS SCHEDULES
    =============================== */

    match /classSchedules/{classScheduleId} {
       // A teacher can get their own schedule.
      allow get: if isExistingDoc()
                 && isTeacherOwner(resource.data);

      // List is open for authenticated users, client must filter by teacherId.
      allow list: if isSignedIn();

      // A teacher can create a schedule for themselves.
      allow create: if isSignedIn()
                    && isTeacherOwner(request.resource.data);

      // A teacher can update or delete their own schedule.
      allow update, delete: if isExistingDoc()
                            && isTeacherOwner(resource.data);
    }

  }
}
