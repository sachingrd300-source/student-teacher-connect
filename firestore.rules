
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function userRole() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
        return isSignedIn() && userRole() == 'admin';
    }

    function isStudent() {
        return isSignedIn() && userRole() == 'student';
    }

    function isTutor() {
        return isSignedIn() && userRole() == 'tutor';
    }
    
    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if request.auth.uid == userId || isTutor();
      allow update: if isOwner(userId) || isAdmin() || isTutor();
      allow delete: if false;
    }

    match /publicTutors/{tutorId} {
      allow get, list: if true;
      allow write, delete: if isAdmin() || isOwner(tutorId);
    }

    match /classes/{classId} {
      allow create: if isTutor() && request.resource.data.teacherId == request.auth.uid;
      allow get, list: if isSignedIn();
      allow update, delete: if isTutor() && resource.data.teacherId == request.auth.uid;
    }

    match /enrollments/{enrollmentId} {
      allow create: if (isTutor() && request.resource.data.teacherId == request.auth.uid && request.resource.data.status == 'approved') ||
                      (isStudent() && request.resource.data.studentId == request.auth.uid && request.resource.data.status == 'pending');
      
      allow get: if isOwner(resource.data.studentId) || isOwner(resource.data.teacherId);

      allow list: if isSignedIn(); 
      
      allow update: if isTutor() && resource.data.teacherId == request.auth.uid;
      
      allow delete: if isTutor() && resource.data.teacherId == request.auth.uid;
    }

    match /studyMaterials/{materialId} {
      allow create: if isTutor() && request.resource.data.teacherId == request.auth.uid;
      // Allow public read for all materials.
      // Client-side code is responsible for filtering appropriately.
      allow get, list: if true;
      allow update, delete: if isTutor() && resource.data.teacherId == request.auth.uid;
    }

    match /tests/{testId} {
      allow create: if isTutor() && request.resource.data.teacherId == request.auth.uid;
      allow get, list: if isSignedIn();
      allow update, delete: if isTutor() && resource.data.teacherId == request.auth.uid;
    }

    match /testResults/{resultId} {
      allow create: if isStudent() && request.resource.data.studentId == request.auth.uid;
      allow get: if isOwner(resource.data.studentId) || isOwner(resource.data.teacherId);
      allow list: if isSignedIn();
      allow update, delete: if false;
    }

    match /attendance/{attendanceId} {
      allow create, update: if isTutor() && request.resource.data.teacherId == request.auth.uid;
      allow get, list: if isSignedIn();
      allow delete: if isTutor() && resource.data.teacherId == request.auth.uid;
    }

    match /announcements/{announcementId} {
      allow create: if isTutor() &&
                      request.resource.data.teacherId == request.auth.uid &&
                      get(/databases/$(database)/documents/classes/$(request.resource.data.classId)).data.teacherId == request.auth.uid;

      allow get, list: if isSignedIn();

      allow delete: if isTutor() && resource.data.teacherId == request.auth.uid;
      allow update: if false;
    }
  }
}
