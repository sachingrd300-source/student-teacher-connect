{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user in the EduConnect Pro application. Could be a teacher or student.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user, typically the Firebase Auth UID."
        },
        "role": {
          "type": "string",
          "enum": ["student", "tutor", "admin"],
          "description": "The role of the user (tutor, student, admin)."
        },
        "name": {
          "type": "string",
          "description": "The full name of the user."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        },
        "createdAt": {
            "type": "string",
            "format": "date-time"
        },
        "status": {
          "type": "string",
          "description": "The verification status of the user (e.g., pending_verification, approved)."
        }
      },
      "required": [
        "id",
        "role",
        "name",
        "email",
        "createdAt"
      ]
    },
    "Class": {
      "title": "Class",
      "type": "object",
      "description": "Represents a class created by a teacher.",
      "properties": {
        "id": {
            "type": "string"
        },
        "teacherId": {
          "type": "string",
          "description": "The ID of the teacher who created the class."
        },
        "teacherName": {
            "type": "string",
            "description": "The name of the teacher who created the class."
        },
        "subject": {
          "type": "string",
          "description": "The subject of the class."
        },
        "title": {
            "type": "string",
            "description": "The title of the class, e.g. 'Math Class 8'"
        },
        "classCode": {
          "type": "string",
          "description": "A unique, shareable code for students to join the class."
        },
        "createdAt": {
            "type": "string",
            "format": "date-time"
        }
      },
      "required": [
        "id",
        "teacherId",
        "teacherName",
        "title",
        "subject",
        "classCode",
        "createdAt"
      ]
    },
    "Enrollment": {
      "title": "Enrollment",
      "type": "object",
      "description": "Represents a student's request to enroll in a specific class.",
      "properties": {
        "id": { "type": "string" },
        "studentId": {
          "type": "string",
          "description": "The ID of the student requesting to enroll."
        },
        "studentName": {
          "type": "string",
          "description": "The name of the student requesting to enroll. Denormalized for performance."
        },
        "classId": {
          "type": "string",
          "description": "The ID of the class the student wants to join."
        },
        "teacherId": {
          "type": "string",
          "description": "The ID of the teacher who owns the class. Denormalized for security rules."
        },
        "status": {
          "type": "string",
          "enum": [
            "pending",
            "approved",
            "denied"
          ],
          "description": "The status of the enrollment request."
        },
        "createdAt": {
            "type": "string",
            "format": "date-time"
        }
      },
      "required": [
        "id",
        "studentId",
        "studentName",
        "classId",
        "teacherId",
        "status",
        "createdAt"
      ]
    },
    "StudyMaterial": {
        "title": "Study Material",
        "type": "object",
        "description": "Represents a study material resource uploaded by a teacher or admin.",
        "properties": {
            "id": { "type": "string" },
            "teacherId": { "type": "string", "description": "The ID of the teacher who uploaded the material. Can be an admin ID." },
            "classId": { "type": "string", "description": "The ID of the class this material belongs to. Null if not class-specific." },
            "title": { "type": "string" },
            "description": { "type": "string" },
            "subject": { "type": "string" },
            "chapter": { "type": "string" },
            "type": { "type": "string", "enum": ["Notes", "PDF", "Video", "Homework", "Test"] },
            "fileUrl": { "type": "string", "description": "URL to the file in Firebase Storage." },
            "createdAt": { "type": "string", "format": "date-time" }
        },
        "required": ["id", "teacherId", "title", "subject", "type", "createdAt"]
    },
    "Attendance": {
      "title": "Attendance",
      "type": "object",
      "description": "Represents a daily attendance record for a specific class.",
      "properties": {
        "id": { "type": "string" },
        "teacherId": { "type": "string" },
        "classId": { "type": "string" },
        "date": { "type": "string", "format": "date" },
        "records": {
          "type": "object",
          "description": "A map of student UIDs to their attendance status (present, absent, late).",
          "additionalProperties": { "type": "string", "enum": ["present", "absent", "late"] }
        },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "teacherId", "classId", "date", "records", "createdAt"]
    },
    "Test": {
        "title": "Test",
        "type": "object",
        "description": "Represents a test created by a teacher.",
        "properties": {
            "id": { "type": "string" },
            "teacherId": { "type": "string" },
            "classId": { "type": "string" },
            "title": { "type": "string" },
            "subject": { "type": "string" },
            "totalMarks": { "type": "number" },
            "questions": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "questionText": { "type": "string" },
                        "options": { "type": "array", "items": { "type": "string" }},
                        "correctAnswer": { "type": "string" }
                    },
                    "required": ["questionText", "options", "correctAnswer"]
                }
            },
            "createdAt": { "type": "string", "format": "date-time" }
        },
        "required": ["id", "teacherId", "classId", "title", "subject", "totalMarks", "questions", "createdAt"]
    },
    "TestResult": {
        "title": "Test Result",
        "type": "object",
        "description": "Stores a student's result for a specific test.",
        "properties": {
            "id": { "type": "string" },
            "testId": { "type": "string" },
            "studentId": { "type": "string" },
            "teacherId": { "type": "string" },
            "classId": { "type": "string" },
            "marksObtained": { "type": "number" },
            "totalMarks": { "type": "number" },
            "submittedAt": { "type": "string", "format": "date-time" }
        },
        "required": ["id", "testId", "studentId", "teacherId", "classId", "marksObtained", "totalMarks", "submittedAt"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "google.com"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/User"
      },
      "description": "Stores all user profiles (students, tutors, admins)."
    },
    "/classes/{classId}": {
      "schema": {
        "$ref": "#/entities/Class"
      },
      "description": "Stores all classes created by teachers."
    },
    "/enrollments/{enrollmentId}": {
      "schema": {
        "$ref": "#/entities/Enrollment"
      },
      "description": "Tracks student enrollment in classes."
    },
    "/studyMaterials/{materialId}": {
      "schema": {
        "$ref": "#/entities/StudyMaterial"
      },
      "description": "All study materials for all classes."
    },
    "/attendance/{attendanceId}": {
        "schema": {
            "$ref": "#/entities/Attendance"
        },
        "description": "Stores daily attendance records for classes."
    },
    "/tests/{testId}": {
        "schema": {
            "$ref": "#/entities/Test"
        },
        "description": "Stores all tests created by teachers."
    },
    "/testResults/{resultId}": {
        "schema": {
            "$ref": "#/entities/TestResult"
        },
        "description": "Stores all student test results."
    }
  }
}
