{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user of the application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user, typically the Firebase Auth UID."
        },
        "name": {
          "type": "string",
          "description": "The full name of the user."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "role": {
          "type": "string",
          "description": "The role of the user.",
          "enum": ["student", "teacher"]
        },
        "createdAt": {
            "type": "string",
            "format": "date-time"
        }
      },
      "required": [
        "id",
        "name",
        "email",
        "role",
        "createdAt"
      ]
    },
    "Connection": {
        "title": "Connection",
        "type": "object",
        "description": "Represents a connection between a student and a teacher.",
        "properties": {
            "studentId": { "type": "string" },
            "teacherId": { "type": "string" },
            "studentName": { "type": "string" },
            "teacherName": { "type": "string" },
            "status": { "type": "string", "enum": ["pending", "approved"] },
            "createdAt": { "type": "string", "format": "date-time" }
        },
        "required": ["studentId", "teacherId", "studentName", "teacherName", "status", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores user profiles."
    },
    "/connections/{connectionId}": {
        "schema": { "$ref": "#/entities/Connection" },
        "description": "Stores connection requests and approvals between students and teachers."
    }
  }
}
