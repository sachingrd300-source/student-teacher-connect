{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user of the application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user, typically the Firebase Auth UID."
        },
        "name": {
          "type": "string",
          "description": "The full name of the user."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "role": {
          "type": "string",
          "description": "The role of the user.",
          "enum": ["student", "teacher", "admin"]
        },
        "bio": {
          "type": "string",
          "description": "A short biography of the user."
        },
        "createdAt": {
            "type": "string",
            "format": "date-time"
        },
        "subject": {
          "type": "string",
          "description": "The subject taught by the teacher."
        },
        "coachingCenterName": {
            "type": "string",
            "description": "The name of the teacher's coaching center."
        },
        "whatsappNumber": {
            "type": "string",
            "description": "The teacher's WhatsApp number for contact."
        },
        "fee": {
            "type": "string",
            "description": "The fee structure for the teacher's classes."
        },
        "fatherName": {
            "type": "string",
            "description": "The student's father's name."
        },
        "class": {
            "type": "string",
            "description": "The class or grade the student is in."
        },
        "mobileNumber": {
            "type": "string",
            "description": "The student's mobile phone number."
        },
        "address": {
            "type": "string",
            "description": "The user's physical address."
        }
      },
      "required": [
        "id",
        "name",
        "email",
        "role",
        "createdAt"
      ]
    },
    "Batch": {
      "title": "Batch",
      "type": "object",
      "description": "Represents a batch created by a teacher.",
      "properties": {
        "name": { "type": "string", "description": "The name of the batch." },
        "teacherId": { "type": "string", "description": "The UID of the teacher who created the batch." },
        "teacherName": { "type": "string", "description": "The name of the teacher." },
        "code": { "type": "string", "description": "A unique, shareable code for students to join the batch." },
        "createdAt": { "type": "string", "format": "date-time" },
        "approvedStudents": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of UIDs of students approved for this batch."
        }
      },
      "required": ["name", "teacherId", "teacherName", "code", "createdAt", "approvedStudents"]
    },
    "Enrollment": {
        "title": "Enrollment",
        "type": "object",
        "description": "Represents a student's enrollment request for a teacher's batch.",
        "properties": {
            "studentId": { "type": "string" },
            "studentName": { "type": "string" },
            "teacherId": { "type": "string" },
            "batchId": { "type": "string" },
            "batchName": { "type": "string" },
            "status": { "type": "string", "enum": ["pending", "approved"] },
            "createdAt": { "type": "string", "format": "date-time" },
            "approvedAt": { "type": "string", "format": "date-time", "description": "The date and time when the enrollment was approved." }
        },
        "required": ["studentId", "studentName", "teacherId", "batchId", "batchName", "status", "createdAt"]
    },
    "StudyMaterial": {
      "title": "Study Material",
      "type": "object",
      "description": "Represents study material uploaded by a teacher for a batch.",
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "string" },
        "fileURL": { "type": "string", "format": "uri" },
        "fileType": { "type": "string", "description": "e.g., pdf, png, jpg" },
        "batchId": { "type": "string" },
        "teacherId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["title", "fileURL", "fileType", "batchId", "teacherId", "createdAt"]
    },
    "Activity": {
      "title": "Activity",
      "type": "object",
      "description": "Represents a logged action within a batch, like an upload or schedule change.",
      "properties": {
        "message": { "type": "string", "description": "A human-readable message describing the activity." },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["message", "createdAt"]
    },
    "Fee": {
      "title": "Fee",
      "type": "object",
      "description": "Represents a student's monthly fee payment status for a batch.",
      "properties": {
        "studentId": { "type": "string" },
        "studentName": { "type": "string" },
        "teacherId": { "type": "string" },
        "batchId": { "type": "string" },
        "batchName": { "type": "string" },
        "feeMonth": { "type": "number", "description": "The month of the fee (1-12)." },
        "feeYear": { "type": "number", "description": "The year of the fee." },
        "status": { "type": "string", "enum": ["paid", "unpaid"] },
        "paidOn": { "type": "string", "format": "date-time" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["studentId", "studentName", "teacherId", "batchId", "batchName", "feeMonth", "feeYear", "status", "createdAt"]
    },
    "Test": {
      "title": "Test",
      "type": "object",
      "description": "Represents a test created by a teacher for a batch.",
      "properties": {
        "title": { "type": "string" },
        "subject": { "type": "string" },
        "testDate": { "type": "string", "format": "date-time" },
        "maxMarks": { "type": "number" },
        "batchId": { "type": "string" },
        "teacherId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["title", "subject", "testDate", "maxMarks", "batchId", "teacherId", "createdAt"]
    },
    "TestResult": {
      "title": "Test Result",
      "type": "object",
      "description": "Represents a student's marks for a specific test.",
      "properties": {
        "testId": { "type": "string" },
        "studentId": { "type": "string" },
        "studentName": { "type": "string" },
        "batchId": { "type": "string" },
        "teacherId": { "type": "string" },
        "marksObtained": { "type": "number" },
        "uploadedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["testId", "studentId", "studentName", "batchId", "teacherId", "marksObtained", "uploadedAt"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores user profiles."
    },
    "/batches/{batchId}": {
        "schema": { "$ref": "#/entities/Batch" },
        "description": "Stores batches created by teachers."
    },
    "/enrollments/{enrollmentId}": {
        "schema": { "$ref": "#/entities/Enrollment" },
        "description": "Stores student enrollment requests for batches."
    },
    "/batches/{batchId}/materials/{materialId}": {
      "schema": { "$ref": "#/entities/StudyMaterial" },
      "description": "Stores study materials for a specific batch."
    },
    "/batches/{batchId}/activity/{activityId}": {
      "schema": { "$ref": "#/entities/Activity" },
      "description": "Stores a log of recent activities for a batch."
    },
    "/batches/{batchId}/tests/{testId}": {
      "schema": { "$ref": "#/entities/Test" },
      "description": "Stores tests for a specific batch."
    },
    "/fees/{feeId}": {
      "schema": { "$ref": "#/entities/Fee" },
      "description": "Stores monthly fee records for students in batches."
    },
    "/testResults/{resultId}": {
      "schema": { "$ref": "#/entities/TestResult" },
      "description": "Stores student marks for tests."
    }
  }
}
