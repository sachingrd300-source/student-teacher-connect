{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user, either a student or a tutor.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user."
        },
        "role": {
          "type": "string",
          "enum": ["student", "tutor", "admin"],
          "description": "The role of the user."
        },
        "name": {
          "type": "string",
          "description": "The full name of the user."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "address": {
          "type": "string",
          "description": "The user's physical address, used for finding nearby tutors."
        },
        "subjects": {
          "type": "array",
          "items": { "type": "string" },
          "description": "A list of subjects the teacher specializes in."
        },
        "status": {
          "type": "string",
          "enum": ["pending_verification", "approved", "denied"],
          "description": "The verification status of a teacher."
        },
        "createdAt": {
            "type": "string",
            "format": "date-time"
        }
      },
      "required": [
        "id",
        "role",
        "name",
        "email",
        "createdAt"
      ]
    },
    "Connection": {
      "title": "Connection",
      "type": "object",
      "description": "Represents a connection request from a student to a teacher.",
      "properties": {
        "id": { "type": "string" },
        "studentId": { "type": "string" },
        "studentName": { "type": "string" },
        "teacherId": { "type": "string" },
        "teacherName": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "approved", "denied"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": [ "id", "studentId", "studentName", "teacherId", "teacherName", "status", "createdAt" ]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores all user profiles (students, tutors, admins)."
    },
    "/connections/{connectionId}": {
      "schema": { "$ref": "#/entities/Connection" },
      "description": "Tracks connection requests between students and teachers."
    }
  }
}
